{
  "name": "@rocket.chat/fuselage",
  "version": "0.1.0",
  "author": {
    "name": "Rocket.Chat",
    "url": "https://rocket.chat/"
  },
  "main": "dist/index.js",
  "source": "src/index.js",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RocketChat/Rocket.Chat.Livechat.Admin.git"
  },
  "bugs": {
    "url": "https://github.com/RocketChat/Rocket.Chat.Livechat.Admin/issues"
  },
  "scripts": {
    "start": "webpack --watch --mode development",
    "build": "webpack --mode production",
    "eslint": "eslint src",
    "stylelint": "stylelint 'src/**/*.scss'",
    "test": "jest",
    "test:results": "jest --json --outputFile=.storybook/jest-results.json",
    "loki:test": "cross-env CHROME_PATH=/usr/bin/chromium-browser yarn loki test --chromeDockerImage=zenika/alpine-chrome:73 --verboseRenderer --requireReference --reactUri file:./storybook-static",
    "loki:update": "cross-env CHROME_PATH=/usr/bin/chromium-browser yarn loki update --chromeDockerImage=zenika/alpine-chrome:73 --verboseRenderer --requireReference --reactUri file:./storybook-static",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "deploy-storybook": "gh-pages --dist ./storybook-static --dest fuselage --message \"Deploy Storybook to Github Pages [skip ci]\" --user \"Guilherme Gazzo <guilherme.gazzo@rocket.chat>\""
  },
  "peerDependencies": {
    "react": "^16.8.6"
  },
  "devDependencies": {
    "identity-obj-proxy": "^3.0.0",
    "loki": "^0.15.0",
    "node-sass": "^4.12.0",
    "sass-loader": "^7.1.0",
    "stylelint": "^10.0.1",
    "stylelint-order": "^3.0.0"
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(css|scss)$": "identity-obj-proxy"
    }
  },
  "loki": {
    "configurations": {
      "chrome.laptop": {
        "target": "chrome.docker",
        "width": 1366,
        "height": 768,
        "deviceScaleFactor": 1,
        "mobile": false,
        "fitWindow": false
      },
      "chrome.iphone7": {
        "target": "chrome.docker",
        "preset": "iPhone 7"
      }
    }
  },
  "dependencies": {
    "@rocket.chat/icons": "^0.1.0"
  }
}
